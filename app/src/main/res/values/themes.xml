<resources>
    <!-- Base application theme. -->
    <style name="Theme.ProgressTerra" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BlueGradient" parent="Theme.ProgressTerra">
        <item name="darkerColor">@color/darkBlue</item>
        <item name="lighterColor">@color/lightBlue</item>
    </style>

    <style name="RedGradient" parent="Theme.ProgressTerra">
        <item name="darkerColor">@color/darkRed</item>
        <item name="lighterColor">@color/lightRed</item>
    </style>

    <style name="GreenGradient" parent="Theme.ProgressTerra">
        <item name="darkerColor">@color/darkGreen</item>
        <item name="lighterColor">@color/lightGreen</item>
    </style>


</resources>